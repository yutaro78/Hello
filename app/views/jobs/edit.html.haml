%section.hero.is-success
  .hero-body
    .container
      %h1.title
        求人編集
- if @job.errors.any?
  .notification.is-danger
    %h2
      = pluralize(@job.errors.count, "error")
      prohibited this object from being saved: not successfully
    %ul
      - @job.errors.full_messages.each do |message|
        %li= message
%section.section
  .container
    .columns.is-centered
      .column.is-6
        = form_for @job do |f|
          .field
            = f.label :title, "仕事名", class: "label"
            = f.text_field :title, class: "input"
          .field
            = f.label :body, "詳細", class: "label"
            = f.text_area :body, class: "textarea"
          = f.submit '投稿', class: "button is-success"

      .column.is-7
        .card
          .card-image
          .card-content
            .media
              .media-content
                %p.title.is-4= @job.title
                = @job.user.username
            .content
              %table.table.is-narrow
                %tr
                  %th 求人情報
                %tr
                  %td= simple_format @job.body
                  -if user_signed_in? && current_user.id == @job.user_id
                    = link_to "編集画面へ", edit_job_path(@job), class: "button is-success"
                  
